<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubRequests" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="backgroundColor">@color/dark_background_color</item>

    </style>

    <style name="Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="SubTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">@dimen/sub_title_text_size</item>
    </style>

    <style name="Label" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/label_night_color</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:drawableStart">@drawable/ic_calendar</item>
        <item name="android:drawablePadding">@dimen/label_icon_padding</item>
    </style>

    <style name="Label.Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/divider_color</item>
        <item name="android:alpha">0.2</item>
    </style>

    <style name="Error.Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/label_night_color</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">@dimen/error_text_size</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Error.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:background">@drawable/try_again_button_background</item>
    </style>

    <style name="Error.Button.Big" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:background">@drawable/try_again_button_background</item>
    </style>


</resources>